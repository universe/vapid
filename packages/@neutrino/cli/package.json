    "dotenv": "^10.0.0",
    "fastify": "^4.0.3",
    "livereload": "^0.9.3",
    "pino": "^8.11.0",
    "update-notifier": "^5.1.0",
    "pino-pretty": "^9.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^28.1.1",
    "@neutrino/runtime": "1.0.0-beta.0",
