{
  "name": "@universe/vapid",
  "version": "0.1.6",
  "license": "MIT",
  "description": "A template-driven content management system",
  "repository": "universe/vapid",
  "author": "Adam Miller <adam@universe.app>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vapid": "./bin/cli.js"
  },
  "scripts": {
    "typecheck": "tsc --emitDeclarationOnly",
    "lint": "eslint bin lib test",
    "test": "jest | pino-pretty",
    "emulate": "firebase emulators:start",
    "build": "rm -rf assets/dashboard/javascripts && rm -rf dist && parcel build",
    "watch": "watch 'npm run build' './lib' --wait=1"
  },
  "browsers": "> 0.5%, last 2 versions, not dead",
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "app",
    "cms",
    "framework",
    "web"
  ],
  "nodemonConfig": {
    "ignore": [
      "assets/*"
    ]
  },
  "alias": {
    "react": "preact/compat",
    "react-dom": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react/jsx-runtime": "preact/jsx-runtime",
    "html5sortable": "html5sortable/dist/html5sortable.es.js"
  },
  "targets": {
    "lib": {
      "context": "node",
      "source": "./lib/index.ts",
      "distDir": "./dist",
      "outputFormat": "commonjs",
      "optimize": false,
      "isLibrary": true,
      "engines": {
        "node": ">=12.0.0"
      }
    },
    "editor": {
      "context": "browser",
      "source": "./lib/runners/VapidServer/Dashboard/dashboard.tsx",
      "distDir": "./assets/dashboard/javascripts",
      "outputFormat": "global",
      "optimize": false,
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    },
    "preview": {
      "context": "browser",
      "source": "./lib/runners/VapidServer/Dashboard/highlight.ts",
      "distDir": "./assets/dashboard/javascripts",
      "outputFormat": "global",
      "optimize": false,
      "engines": {
        "browsers": "> 0.5%, last 2 versions, not dead"
      }
    }
  },
  "files": [
    "assets",
    "bin",
    "dist"
  ],
  "dependencies": {
    "@cannery/hoist": "^0.7.1",
    "@glimmer/syntax": "0.83.1",
    "@simple-dom/serializer": "^1.4.0",
    "@swc/helpers": "^0.3.2",
    "@uiw/react-md-editor": "^3.9.1",
    "@universe/util": "^0.2.5",
    "autoprefixer": "^10.3.0",
    "blurhash": "^1.1.4",
    "color": "^4.1.0",
    "commander": "^2.12.2",
    "css-loader": "^3.0.0",
    "dotenv": "^10.0.0",
    "fastify": "^3.18.1",
    "fastify-cookie": "^5.3.1",
    "fastify-csrf": "^3.1.0",
    "fastify-favicon": "^3.1.0",
    "fastify-helmet": "^5.3.2",
    "fastify-multipart": "^4.0.7",
    "fastify-plugin": "^3.0.0",
    "fastify-static": "^4.2.2",
    "find-up": "^5.0.0",
    "firebase": "^9.6.1",
    "glob": "^7.1.2",
    "html-escaper": "^3.0.3",
    "html5sortable": "^0.13.2",
    "image-size": "^0.8.3",
    "jsdom": "^16.5.2",
    "livereload": "^0.9.3",
    "markdown-it": "^12.1.0",
    "mime": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "module-alias": "^2.2.2",
    "nanoid": "^3.1.30",
    "node-fetch": "^2.0.0",
    "normalize-url": "6",
    "pino": "^6.11.3",
    "pluralize": "^8.0.0",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "preact": "^10.6.4",
    "preact-router": "^3.2.1",
    "quill": "^1.3.6",
    "quill-button": "^0.0.7",
    "quill-hr": "^0.0.4",
    "quill-image": "^0.0.21",
    "quill-video-embed": "^0.0.5",
    "react-hot-toast": "^2.2.0",
    "react-tag-autocomplete": "^6.3.0",
    "replacestream": "^4.0.3",
    "resolve-url-loader": "^2.3.0",
    "sanitize-html": "^1.18.2",
    "serve-handler": "^6.1.3",
    "sharp": "^0.29.3",
    "simple-dom": "^1.4.0",
    "tmp": "^0.2.1",
    "tui-image-editor": "^3.9.0",
    "unfurl.js": "5.6.2",
    "update-notifier": "^2.5.0",
    "webpack": "^4.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^27.0.6",
    "@jest/types": "^27.0.6",
    "@types/color": "^3.0.2",
    "@types/color-namer": "^1.3.0",
    "@types/ejs": "^3.0.7",
    "@types/find-root": "^1.1.2",
    "@types/glob": "^7.1.3",
    "@types/html-escaper": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@types/livereload": "^0.9.0",
    "@types/markdown-it": "^12.0.3",
    "@types/mime": "^2.0.3",
    "@types/node-fetch": "2",
    "@types/pino": "^6.3.9",
    "@types/pluralize": "^0.0.29",
    "@types/postcss-import": "^12.0.1",
    "@types/quill": "^2.0.9",
    "@types/react-tag-autocomplete": "^6.1.1",
    "@types/replacestream": "^4.0.1",
    "@types/sanitize-html": "^1.27.2",
    "@types/serve-handler": "^6.1.1",
    "@types/sharp": "^0.29.5",
    "@types/webpack": "^4.41.26",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "faker": "^4.1.0",
    "firebase-tools": "10",
    "jest": "^27.0.6",
    "nock": "^13.2.2",
    "parcel": "^2.0.1",
    "pino-pretty": "^7.3.0",
    "recursive-readdir": "^2.2.2",
    "supertest": "^3.0.0",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.4",
    "watch": "^1.0.2"
  }
}
